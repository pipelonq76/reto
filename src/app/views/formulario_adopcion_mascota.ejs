            <!-- end title -->

            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="contact_form" style="box-shadow: 3px 3px 3px 3px black; border-radius: 30px;">
                        <div id="message"></div>
                        <form id="contactform" class="row" action="/formulario_adopcion_mascota" name="contactform" method="post">
                            <fieldset class="row row-fluid">
                                <div class="container">
                                    <div class="section-title row text-center">
                                        <div class="col-md-8 offset-md-2">
                                            <h3 class="titulo">Formulario adopcion <%=adopcion[1].nombre_mascota%></h3>
                                        </div>
                                    </div>
                                </div>

                                 <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <label class="label"><strong>Docuemnto de identidad</strong></label>
                                    <input type="text" name="input_documento_adoptante" class="form-control" placeholder="Docuemnto de identidad" required>
                                </div>

                                 <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                      <label class="label"><strong>Nombre completo</strong></label>
                                    <input type="text" name="input_nombre_adoptante" class="form-control" placeholder="Nombre completo" required>
                                </div>

                                 <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                      <label class="label"><strong>Telefono</strong></label>
                                    <input type="text" name="input_telefono_adoptante" class="form-control" placeholder="Telefono" required>
                                </div>

                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                      <label class="label"><strong>Sexo</strong></label>
                                   <select class="form-control" name="input_sexo_adoptante">
                                    <option value="M">Masculino</option>
                                    <option value="F">Femenino</option>   
                                   </select>
                                </div>

                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                      <label class="label"><strong>Correo electrónico</strong></label>
                                    <input type="text" name="input_correo_adoptante" class="form-control" placeholder="correo electronico" required>
                                </div>

                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                      <label class="label"><strong>Fecha de nacimiento</strong></label>
                                    <input type="date" name="input_fecha_de_nacimiento_adoptante" class="form-control" placeholder="Fecha de nacimiento" required>
                                </div>

                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                      <label class="label"><strong>Direccion</strong></label>
                                    <input type="text" name="input_direccion_adoptante" class="form-control" placeholder="Direccion" required>
                                </div>

                                 <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                      <label class="label"><strong>Ingresos mensuales</strong></label>
                                   <select class="form-control" name="input_ingresos_mensuales">
                                    <option value="menos de 100.000$">menos de 100.000$</option>
                                    <option value="100.000$ - 400.000$">100.000$ - 400.000$</option>
                                    <option value="500.000$ - 800.000$">500.000$ - 800.000$</option>
                                    <option value="900.000$ - 1.200.000$">900.000$ - 1.200.000$</option>
                                    <option value="1.300.000$ - 1.800.000$">1.300.000$ - 1.800.000$</option>
                                    <option value="1.900.000$ - 2.000.000$">1.900.000$ - 2.000.000$</option>
                                    <option value="2.100.000$ - 2.500.000$">2.100.000$ - 2.500.000$</option>
                                    <option value="Más de 2.500.000$">Más de 2.500.000$</option>
                                   </select>
                                </div>

                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                      <label class="label"><strong>¿Como ha sido tu experiencia con anteriores mascotas?</strong></label>
                                    <textarea  type="text" name="input_experiencia_mascotas_adoptante" class="form-control" placeholder="¿Como ha sido tu experiencia con anteriores mascotas?" required></textarea>
                                </div>

                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                      <label class="label"><strong>¿Cual es tu tipo de mascota favorita?</strong></label>
                                    <textarea type="text" name="input_tipo_mascota_adoptante" class="form-control" placeholder="¿Cual es tu tipo de mascota favorita?" required></textarea>
                                </div>

                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                      <label class="label"><strong>Hablanos de ti</strong></label>
                                    <textarea type="text" name="input_descripcion_adoptante" class="form-control" placeholder="Hablanos de ti" required></textarea>
                                </div>

                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                                    <button onclick="validarDatos()" type="submit" value="SEND" id="enviar" class="btn btn-light btn-radius btn-brd grd1 btn-block subt">Enviar</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
